<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/photo_card_size"
    android:layout_margin="@dimen/indent_s">

    <ImageView
        android:id="@+id/vPhoto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/photo"
        tools:src="@drawable/ic_cloud_off_24dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="bottom"
        android:background="@color/semi_transparent_black"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:padding="@dimen/indent_s">

        <TextView
            android:id="@+id/vName"
            style="@style/PhotoCardText"
            android:textSize="@dimen/text_m"
            tools:text = "Some test name" />

        <TextView
            android:id="@+id/vAuthor"
            style="@style/PhotoCardText"
            android:layout_marginTop="@dimen/indent_s"
            android:textSize="@dimen/text_s"
            tools:text="Some cool author with very long name" />
    </LinearLayout>
</android.support.v7.widget.CardView>